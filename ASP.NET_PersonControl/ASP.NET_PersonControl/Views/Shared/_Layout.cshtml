    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/css/")
    @Scripts.Render("~/ventors/")
    @Scripts.Render("~/scss/")
    @Scripts.Render("~/vendors/iconfonts/mdi/css/materialdesignicons.min.css")
    @Scripts.Render("~/Content/Chosen/chosen.min.css")

    <script src="~/Scripts/chosen.jquery.min.js"></script>
