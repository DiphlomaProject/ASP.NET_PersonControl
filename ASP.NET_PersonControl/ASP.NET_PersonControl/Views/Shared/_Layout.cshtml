    <link rel="shortcut icon" href="images/favicon.png" />
    <style>
        body {
            padding: 0;
            margin: 0;
        }

        .for_logo {
            display: inline-block;
            position: relative;
            color: #000;
            margin-top: 5px;
        }

        .logo_square {
            background: #3E92EA;
            width: 70px;
            height: 54px;
            position: absolute;
            transition: 400ms ease;
        }

        .logo_text {
            padding-left: 14px;
        }

        .big_logo_text {
            font-size: 30px;
            position: relative;
            z-index: 2;
            font-family: 'Cormorant Garamond', serif;
            font-weight: 700;
            letter-spacing: 2px;
        }

            .big_logo_text span {
                color: #fff;
                padding-right: 14px;
            }

        .small_logo_text {
            font-size: 14px;
            color: #fff;
            position: absolute;
            z-index: 2;
            font-family: 'Roboto', sans-serif;
            font-weight: 300;
            margin-top: -11px;
        }

        .logo_link:hover .logo_square {
            background: #14cfd6;
            transition: 400ms ease;
        }

        .navbar.default-layout .navbar-menu-wrapper {
            background: #3e92ea !important;
        }

        .navbar.default-layout {
            background: none !important;
        }

        .nav > li > a:hover, .nav > li > a:focus {
            background-color: #3e92ea !important;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">

                <a href="@Url.Action("Index","Home")" class="logo_link">
                    <div class="for_logo">
                        <div class="logo_square"></div>
                        <div class="logo_text">
                            <div class="big_logo_text"><span>Per</span>sonControl</div>
                            <div class="small_logo_text">Diploma</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center">
                <ul class="navbar-nav navbar-nav-left header-links d-none d-md-flex">
                    <li class="nav-item">
                        <a href="@Url.Action("About","Home")" class="nav-link">
                            <i class="mdi mdi-elevation-rise"></i>About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Contact","Home")" class="nav-link">
                            <i class="mdi mdi-bookmark-plus-outline"></i>Contact
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav navbar-nav-right ">
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                       
                    }
                    @Html.Partial("_LoginPartial")
                </ul>

            </div>

        </nav>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <div class="nav-link">
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                            <div class="user-wrapper">

                                @if (Session["DisplayName"] != null)
                                {

                                    if (Session["Image"] != null)
                                    {
                                        <div class="profile-image">
                                            <img src="@String.Format("data:image/png;base64,{0}", HttpContext.Current.Session["Image"].ToString())" alt="profile image">
                                            @*<img class="img-xs rounded-circle" src="@String.Format("data:image/png;base64,{0}",  HttpContext.Current.Session["Image"].ToString())" alt="Profile image">*@
                                        </div>
                                    }
                                    else
                                    {

                                    }

                                    <div class="text-wrapper">
                                        <p class="profile-name">@*@Context.User.Identity.Name*@ @HttpContext.Current.Session["DisplayName"].ToString()</p>
                                        @if (Context.User.IsInRole("Admin"))
                                        {
                                            <div>
                                                <small class="designation text-muted">Admin</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                        else if (Context.User.IsInRole("Manager"))
                                        {
                                            <div>
                                                <small class="designation text-muted">Manager</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                        @*@if (Context.User.IsInRole("Employee"))*@
                                        else
                                        {
                                            <div>
                                                <small class="designation text-muted">Employee</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }

                                    </div>

                                }
                                else
                                {
                                    if (Session["Image"] != null)
                                    {
                                        <div class="profile-image">
                                            <img src="@String.Format("data:image/png;base64,{0}", HttpContext.Current.Session["Image"].ToString())" alt="profile image">
                                            @*<img class="img-xs rounded-circle" src="@String.Format("data:image/png;base64,{0}",  HttpContext.Current.Session["Image"].ToString())" alt="Profile image">*@
                                        </div>
                                    }
                                    else
                                    {

                                    }
                                    <div class="text-wrapper">
                                        <p class="profile-name">@Context.User.Identity.Name</p>
                                        @if (Context.User.IsInRole("Admin"))
                                        {
                                            <div>
                                                <small class="designation text-muted">Admin</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                        else if (Context.User.IsInRole("Manager"))
                                        {
                                            <div>
                                                <small class="designation text-muted">Manager</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                        else/* if (Context.User.IsInRole("Employee"))*/
                                        {
                                            <div>
                                                <small class="designation text-muted">Employee</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                                if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Manager"))
                                {


                                    <div class="dropdown">
                                        <button type="button" class="btn btn-success btn-block dropdown-toggle" data-toggle="dropdown" style="margin: 10px 0; min-width: 185px;">
                                            New Task
                                        </button>
                                        <div class="dropdown-menu" style="padding: 25px 10px; top: 45px;">
                                            <button class="btn btn-success btn-block"
                                                    onclick="location.href='@Url.Action("Create", "Tasks")'">
                                                New Task Person
                                                <i class="mdi mdi-plus"></i>
                                            </button>
                                            <br />
                                            <button class="btn btn-success btn-block"
                                                    onclick="location.href='@Url.Action("CreateTaskForGroups", "Tasks")'">
                                                New Task Groups
                                                <i class="mdi mdi-plus"></i>
                                            </button>
                                            <br />
                                            <button class="btn btn-success btn-block"
                                                    onclick="location.href='@Url.Action("CreateTaskForProjects", "Tasks")'">
                                                New Task Project
                                                <i class="mdi mdi-plus"></i>
                                            </button>

                                        </div>
                                    </div>

                                    <button class="btn btn-success btn-block" onclick="location.href='@Url.Action("Create", "Customers")'">
                                        New Customer
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                    <br />
                                    <button class="btn btn-success btn-block" onclick="location.href='@Url.Action("Create", "Project")'">
                                        New Project
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                    <br />
                                    <button class="btn btn-success btn-block" onclick="location.href='@Url.Action("Create", "Group")'">
                                        New Group
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                }
                            }
                        </div>
                    </li>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
