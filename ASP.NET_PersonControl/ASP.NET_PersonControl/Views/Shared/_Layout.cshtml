                                            <a class="nav-link" href="@Url.Action("Index", "MyProjects")">My Project's</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Index", "Project")">Project Manager</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Archive", "Project")">Project Archive</a>
                                        </li>

                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "FileStorage")">
                                    <i class="menu-icon mdi mdi-television"></i>
                                    <span class="menu-title">File Storage</span>
                                </a>
                            </li>
                        }

                        //if (Context.User.IsInRole("Employee") || Context.User.IsInRole(""))
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "MyTask")">
                                    <i class="menu-icon mdi mdi-television"></i>
                                    <span class="menu-title">Task</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "MyGroups")">
                                    <i class="menu-icon mdi mdi-television"></i>
                                    <span class="menu-title">Groups</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "MyProjects")">
                                    <i class="menu-icon mdi mdi-television"></i>
                                    <span class="menu-title">Projects</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "FileStorage")">
                                    <i class="menu-icon mdi mdi-television"></i>
                                    <span class="menu-title">File Storage</span>
                                </a>
                            </li>
                        }
                    }

                </ul>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </div>
        </div>
