<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Person Control</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="vendors/css/vendor.bundle.addons.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="images/favicon.png" />

</head>
<body>
    <div class="container-scroller">
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
                <a class="navbar-brand brand-logo" href="@Url.Action("Index", "Home")">
                    <img src="images/logo.svg" alt="logo" />
                </a>
                <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index", "Home")">
                    <img src="images/logo-mini.svg" alt="logo" />
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center">
                <ul class="navbar-nav navbar-nav-left header-links d-none d-md-flex">
                    <li class="nav-item">
                        <a href="@Url.Action("About","Home")" class="nav-link">
                            <i class="mdi mdi-elevation-rise"></i>About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Contact","Home")" class="nav-link">
                            <i class="mdi mdi-bookmark-plus-outline"></i>Contact
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav navbar-nav-right ">
                    @Html.Partial("_LoginPartial")
                </ul>

            </div>

        </nav>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <div class="nav-link">
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                <div class="user-wrapper">
                                    <div class="profile-image">
                                        <img src="images/faces/face1.jpg" alt="profile image">
                                    </div>
                                    <div class="text-wrapper">
                                        <p class="profile-name">@Context.User.Identity.Name</p>
                                        @if (Context.User.IsInRole("Admin"))
                                        {
                                            <div>
                                                <small class="designation text-muted">Admin</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                        @if (Context.User.IsInRole("Manager"))
                                        {
                                            <div>
                                                <small class="designation text-muted">Manager</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                        @if (Context.User.IsInRole(""))
                                        {
                                            <div>
                                                <small class="designation text-muted">No Role</small>
                                                <span class="status-indicator online"></span>
                                            </div>
                                        }
                                    </div>
                                </div>
                                if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Manager"))
                                {
                                    <button class="btn btn-success btn-block" onclick="location.href='@Url.Action("Create", "Project")'">
                                        New Project
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                    <button class="btn btn-success btn-block" onclick="location.href='@Url.Action("Create", "Group")'">
                                        New Group
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                    <button class="btn btn-success btn-block" onclick="location.href='@Url.Action("Index", "Home")'">
                                        New Task
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                    <button class="btn btn-success btn-block" onclick="@("window.location.href='" + @Url.Action("Create", "Customers") + "'");">
                                        New Customer
                                        <i class="mdi mdi-plus"></i>
                                    </button>


                                }
                            }
                        </div>
                    </li>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        if (Context.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Employees")">
                                    <i class="menu-icon mdi mdi-sticker"></i>
                                    <span class="menu-title">Employees</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Customers")">
                                    <i class="menu-icon mdi mdi-sticker"></i>
                                    <span class="menu-title">Customers</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                                <i class="menu-icon mdi mdi-content-copy"></i>
                                <span class="menu-title">Group's</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="ui-basic">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "MyGroups")">My Groups</a>
                                    </li>
                                    @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Manager"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Index", "Group")">Group Manager</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#ui-basic2" aria-expanded="false" aria-controls="ui-basic2">
                                <i class="menu-icon mdi mdi-content-copy"></i>
                                <span class="menu-title">Project's</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="ui-basic2">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Home")">My Project's</a>
                                    </li>
                                    @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Manager"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Index", "Project")">Project Manager</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </li>
                    }

                </ul>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
