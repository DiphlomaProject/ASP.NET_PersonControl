@model ASP.NET_PersonControl.ViewModels.AdministrationFormViewModel

@{
    ViewBag.Title = "Index";

}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Roles</h4>
                <div class="table-responsive">
                    <table id="roles" class="table table-striped">
                        <thead>
                            <tr>
                                @*<th>Role Id</th>*@
                                <th>Role name</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.Roles)
                            {
                                <tr>
                                    @*<td class="py-1">@role.Id</td>*@
                                    <td class="py-1">@role.Name</td>
                                    @if (role.Name == "Admin")
                                    {

                                    }
                                    else
                                    {
                                        <td class="py-1">@Html.ActionLink("Delete", "DeleteRole", "Employees", new { @id = role.Id }, null)</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <br />
                <button type="button" class="btn btn-success btn-rounded btn-fw" onclick="@("window.location.href='" + @Url.Action("CreateRoleView", "Employees") + "'");">Add Role</button>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">

                    @*@using (Html.BeginForm("SearchingEmpl", "Employees"))
                    {
                        @Html.TextBox("searching")
                        <input type="submit" value="Search" class="btn btn-success mr-2" />
                    }*@
