            </div>*@

                        <table id="books" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Email confrimed</th>
                                    <th>Phone</th>
                                    <th>Country</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                @foreach (var employee in Model.Users)
                                {
                                    <tr class="Search">

                                        <td class="py-1">
                                            @if (employee.DisplayName.IsEmpty() == true)
                                            {
                                                @Html.ActionLink(employee.UserName, "Details", "Employees", new { @id = employee.Id }, null)
                                            }
                                            else
                                            {
                                                @Html.ActionLink(employee.DisplayName, "Details", "Employees", new { @id = employee.Id }, null)
                                            }
                                        </td>
                                        <td class="py-1">@employee.Email</td>
                                        @if (employee.EmailConfirmed.ToString() == "True")
                                        {
                                            <td>
                                                <label class="badge badge-success">Completed</label>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <label class="badge badge-warning">In progress</label>
                                            </td>
                                        }

                                        <td class="py-1">@employee.PhoneNumber</td>
                                        <td class="py-1">@employee.Country</td>
                                        <td class="py-1">
                                            @foreach (string roleName in employee.RoleNames)
                                            {
                                                @roleName;
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                <br />
                <button type="button" class="btn btn-success btn-rounded btn-fw" onclick="@("window.location.href='" + @Url.Action("Create", "Employees") + "'");">New User</button>
            </div>
        </div>
    </div>
