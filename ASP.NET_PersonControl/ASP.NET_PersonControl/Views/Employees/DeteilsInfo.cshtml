@model ASP.NET_PersonControl.Models.ApplicationUser

@{
    ViewBag.Title = "GlobalUserViewInfo";
}

<h2>@Model.DisplayName information.</h2>

<table id="books" class="table table-hover">
    <tbody>
        <tr>
            <td style="width:150px;"><strong>Name:</strong></td>
            <td>@Model.DisplayName</td>
        </tr>
        <tr>
            <td><strong>ID:</strong></td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td><strong>Email:</strong></td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td><strong>Email confrimed</strong></td>
            <td>@Model.EmailConfirmed</td>
        </tr>
        <tr>
            <td><strong>Phone</strong></td>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <td><strong>Phone confrimed</strong></td>
            <td>@Model.PhoneNumberConfirmed</td>
        </tr>
        <tr>
            <td><strong>Country</strong></td>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <td><strong>City</strong></td>
            <td>@Model.City</td>
        </tr>
        <tr>
            <td><strong>Address</strong></td>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <td><strong>Role</strong></td>
            <td>
                @foreach (string roleName in Model.RoleNames)
                {
                    @roleName;
                }
            </td>
        </tr>
    </tbody>
</table>
<br />
<button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Index", "Group") + "'");">Back to List</button>