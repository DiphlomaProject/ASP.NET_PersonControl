@model ASP.NET_PersonControl.ViewModels.GroupsViewModel
@{


    ViewBag.Title = "Create";
}
@using (Html.BeginForm("Save", "Group"))
{
    @Html.AntiForgeryToken()

    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Project</h4>
                <p class="card-description">
                    @*Basic form elements*@
                </p>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.group.Title, htmlAttributes: new { })
                        <br />
                        @Html.EditorFor(model => Model.group.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" } })
                        @Html.ValidationMessageFor(model => Model.group.Title, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        @Html.Label("Owner", htmlAttributes: new { })
                        <br />
                        @Html.DropDownListFor(m => m.curOwner.Id, new SelectList(Model.owners, "Id", "DisplayName"), "Enter Owner", new { id = "normalDropDown", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.curOwner.Id, "", new { @class = "text-danger" })
                    </div>



                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Description", htmlAttributes: new { })
                        <br />
                        @Html.TextAreaFor(Model => Model.group.Description, htmlAttributes: new { @class = "form-control", @rows = "4", @placeholder = "etc" })
                        @Html.ValidationMessageFor(model => Model.group.Description, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <input class="btn btn-light" type="button" value="Cancel" onclick="@("window.location.href='" + @Url.Action("Index", "Group") + "'");" />
                </form>
                    </div>
            </div>
        </div>

            }


            @section scripts{
                <script>
                    $(function () {
                        $("#normalDropDown").chosen();
                    });
                </script>
            }
