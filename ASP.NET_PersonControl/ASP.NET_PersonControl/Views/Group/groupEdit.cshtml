@model ASP.NET_PersonControl.ViewModels.GroupsViewModel

@{
    ViewBag.Title = "groupEdit";
}

<h2>Edin group @Model.group.Title </h2>

@using (Html.BeginForm("Save", "Group"))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        @Html.HiddenFor(m => m.group.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.group.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.group.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.group.Title, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Owner", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (!Model.curOwner.DisplayName.IsEmpty())
                {
                    @Html.DropDownListFor(m => m.curOwner.Id, new SelectList(Model.owners, "Id", "DisplayName"), Model.curOwner.DisplayName, new { @class = "form-control" })
                }
                else
                {
                    @Html.DropDownListFor(m => m.curOwner.Id, new SelectList(Model.owners, "Id", "DisplayName"), Model.curOwner.Email, new { @class = "form-control" })
                }
                @Html.ValidationMessageFor(m => m.owners, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.groups.ElementAt(0).Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.group.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.group.Description, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a class="btn btn-primary" href="@Url.Action("Delete", "Group", new { @id = @Model.group.Id })" data-form-method="get">Delete</a>
</div>
}
