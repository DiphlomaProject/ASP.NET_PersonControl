@model ASP.NET_PersonControl.ViewModels.GroupsViewModel
@{
    ViewBag.Title = "GroupManager";
}

<h2>Group Manager</h2>

@if (Context.User.Identity.IsAuthenticated && (Context.User.IsInRole("Admin") || Context.User.IsInRole("Manager")))
{
    <h4>You can create new group. </h4>
    <button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Create", "Group") + "'");">Create group</button>
}
<br />
<br />
<h4>Current groups.</h4>

<table id="group" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Owner</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.groups)
        {
        <tr>
            <td>@group.Title</td>
            <td>@group.Owner</td>
            <td>@group.Description</td>
        </tr>
        }

    </tbody>
</table>
<button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");">Back</button>
