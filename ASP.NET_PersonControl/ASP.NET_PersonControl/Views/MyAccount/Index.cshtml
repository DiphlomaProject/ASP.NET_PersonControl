@model ASP.NET_PersonControl.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  
</head>

<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->

            <div class="text-center">
                @*<img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">*@
                <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.img))" class="img-circle" width="150"  alt="avatar" />
                <br />
            </div></hr><br>

           

            <ul class="list-group">
                <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Project</strong></span> 125</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Group</strong></span> 13</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Task Complete</strong></span> 13</li>
            </ul>
        </div><!--/col-3-->
        <div class="col-sm-9">
        

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form">
                        <div class="form-group">
                            <h1>My Profile</h1>
                            <div class="col-xs-6">
                                <br />
                                <label><h4>Name</h4></label>
                                <br />
                                <input value="@Model.DisplayName" placeholder="Full name" class="form-control form-control-line" readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <br />
                                <label><h4>Country</h4></label>
                                <br />
                                <input value="@Model.Country" placeholder="no info" class="form-control form-control-line" readonly>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <br />
                                <label for="phone"><h4>Phone</h4></label>
                                <input value="@Model.PhoneNumber" placeholder="no info" class="form-control form-control-line" readonly>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <br />
                                <label><h4>City</h4></label>
                                <input value="@Model.City" placeholder="no info" class="form-control form-control-line" readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <br />

                                <label><h4>Role</h4></label>
                                <input value=" @foreach (string roleName in Model.RoleNames){@roleName;}" placeholder="no info" class="form-control form-control-line" readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <br />
                                <label><h4>Address</h4></label>
                                <input value="@Model.Address" placeholder="no info" class="form-control form-control-line" readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <br />
                                <label><h4>Email</h4></label>
                                <input value="@Model.Email" placeholder="e-mail" class="form-control form-control-line" name="example-email" id="example-email" readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <br />
                                <label><h4>Verify</h4></label>
                                @if (Model.EmailConfirmed.ToString() == "True")
                                {
                                    <br />
                                    <label class="badge badge-success">Completed</label>

                                }
                                else
                                {
                                    <br />
                                    <label class="badge badge-warning">In progress</label>

                                }
                            </div>
                        </div>

                    </form>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <br>

                            <button class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("Edit", "MyAccount", new { @id = @Model.Id }) + "'");">Update Profile</button>

                        </div>
                    </div>
                    <hr>

                </div><!--/tab-pane-->
            
                

            </div><!--/tab-pane-->
        </div><!--/tab-content-->
    </div><!--/col-9-->
</div><!--/row-->
